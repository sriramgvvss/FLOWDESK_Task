{
    "compilerOptions": {
      "target": "ES2020",                          
      "module": "commonjs",                        
      "lib": ["ES2020", "DOM"],                    
      "moduleResolution": "node",                  
      "esModuleInterop": true,                     
      "allowSyntheticDefaultImports": true,        
      "resolveJsonModule": true,                   
      "noEmit": true,                              
      "strict": true,                              
      "forceConsistentCasingInFileNames": true,    
      "skipLibCheck": true                         
    },
    "include": ["tests", "utils"],
    "exclude": ["node_modules", "dist"]
  }